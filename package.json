{
	"name": "@nivalis/vercel-tui",
	"type": "module",
	"version": "0.1.0",
	"description": "Terminal UI for managing Vercel deployments",
	"private": false,
	"bin": {
		"vercel-tui": "./bin/vercel-tui"
	},
	"files": ["bin"],
	"publishConfig": {
		"access": "public"
	},
	"keywords": ["vercel", "tui", "terminal", "deployments", "cli"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nivalis/vercel-tui.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis/vercel-tui/issues"
	},
	"homepage": "https://github.com/nivalis/vercel-tui#readme",
	"packageManager": "bun@1.3.1",
	"scripts": {
		"dev": "bun run --watch src/index.tsx",
		"build": "bun build src/index.tsx --compile --outfile bin/vercel-tui",
		"prepublishOnly": "bun run build",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"prepare": "lefthook install",
		"ts": "tsc --noEmit"
	},
	"dependencies": {
		"@opentui/core": "0.1.36",
		"@opentui/react": "0.1.36",
		"@vercel/sdk": "1.17.0",
		"react": "19.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@nivalis/biome-config": "2.3.4",
		"@total-typescript/ts-reset": "0.6.1",
		"@types/bun": "latest",
		"@types/node": "22.2.0",
		"@types/react": "19.2.2",
		"lefthook": "2.0.2",
		"typescript": "5.9.3"
	}
}

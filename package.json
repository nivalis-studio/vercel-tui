{
	"name": "lazyvercel",
	"type": "module",
	"version": "0.8.1",
	"description": "Terminal UI for managing Vercel deployments",
	"private": false,
	"bin": {
		"lazyvercel": "dist/index.js"
	},
	"files": ["dist"],
	"engines": {
		"bun": ">=1.3.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"keywords": ["vercel", "tui", "terminal", "deployments", "cli"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nivalis-studio/lazyvercel.git"
	},
	"bugs": {
		"url": "https://github.com/nivalis-studio/lazyvercel/issues"
	},
	"homepage": "https://github.com/nivalis-studio/lazyvercel#readme",
	"packageManager": "bun@1.3.2",
	"scripts": {
		"dev": "bun run --watch src/index.tsx",
		"build": "bun build src/index.tsx --target=bun --outdir dist && chmod +x dist/index.js",
		"prepublishOnly": "bun run build",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"prepare": "lefthook install",
		"ts": "tsc --noEmit"
	},
	"dependencies": {
		"@opentui/core": "0.1.47",
		"@opentui/react": "0.1.47",
		"@vercel/sdk": "1.17.3",
		"open": "11.0.0",
		"react": "19.2.0",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@nivalis/biome-config": "2.3.6",
		"@total-typescript/ts-reset": "0.6.1",
		"@types/bun": "1.3.2",
		"@types/node": "22.2.0",
		"@types/react": "19.2.6",
		"lefthook": "2.0.4",
		"typescript": "5.9.3"
	}
}
